<title><%= @pomsky_breeder.name %></title>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @pomsky_breeder.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @pomsky_breeder.name %></h3>
    <p><%= @pomsky_breeder.description %></p>
    <p><%= @pomsky_breeder.website %></p>
    <p><%= @pomsky_breeder.phone %></p>
    <p><%= @pomsky_breeder.email %></p>
  </div>
</div>

<% if @pomsky_breeder.user == current_user %>
  <%= link_to 'Edit', edit_pomsky_breeder_path(@pomsky_breeder), class: "btn btn-link" %>  
<% end %>

<%= link_to 'Back', pomsky_breeders_path, class: "btn btn-link" %>