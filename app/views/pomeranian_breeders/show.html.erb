<title><%= @pomeranian_breeder.name %></title>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @pomeranian_breeder.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @pomeranian_breeder.name %></h3>
    <p><%= @pomeranian_breeder.description %></p>
    <p><%= @pomeranian_breeder.website %></p>
    <p><%= @pomeranian_breeder.phone %></p>
    <p><%= @pomeranian_breeder.email %></p>
  </div>
</div>

<%= link_to 'Edit', edit_pomeranian_breeder_path(@pomeranian_breeder), class: "btn btn-link" %>
<%= link_to 'Back', pomeranian_breeders_path, class: "btn btn-link" %>